#include <bits/stdc++.h>
using namespace std;

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    int n;
    cin >> n;
    vector<int> a(n) ,b(n);
    for(int i=0;i<n ;i++){
        cin >> a[i] >> b[i];
    }
    int sum1=0,sum2=0;
    for(int i=0;i<n;i++){
        int j =(i+1)%n;
        sum1 += a[i]*b[j];
        sum2 += a[j]*b[i];
    }
    int area = abs(sum1-sum2);
cout << area;
    return 0;
}
